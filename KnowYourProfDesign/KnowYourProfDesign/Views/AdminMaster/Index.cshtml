@model IEnumerable<KnowYourProfDesign.Models.Master>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}


<head>







    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/linericon/style.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/owl-carousel/owl.carousel.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/lightbox/simpleLightbox.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/nice-select/css/nice-select.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/animate-css/animate.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/popup/magnific-popup.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/vendors/flaticon/flaticon.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/css/style.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/Custom_User_Profile/css/responsive.css")>





</head>





<body>

    <section class="home_banner_area">

        <div class="container box_1620">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <div class="banner_inner d-flex align-items-center">

                <table class="table">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th></th>
                    </tr>

                    @try
                    {

                    foreach (var item in Model)
                    {
                        
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.MID}) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MID})
                        </td>
                    </tr>

                        }

                    }

                    catch(Exception e)
                    {

                    }



                </table>








            </div>
        </div>
    </section>







</body>